<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выберите время"
            android:textSize="28sp"
            android:layout_margin="30sp"
            android:gravity="center"
            android:textColor="@color/text"
            android:fontFamily="@font/montserrat_bold">
        </TextView>

        <TimePicker
            android:id="@+id/time_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:timePickerMode="spinner"
            android:theme="@style/Theme.AppCompat">
        </TimePicker>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выберите тип головоломки"
            android:textSize="20sp"
            android:textColor="@color/text"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold">
        </TextView>

        <Spinner
            android:id="@+id/puzzle_choose"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textColor="@color/text">
        </Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Мелодия будильника"
            android:textSize="20sp"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/text">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPickRingtone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Выбрать мелодию"
                android:textColor="@color/text"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                app:backgroundTint="@color/button">
            </com.google.android.material.button.MaterialButton>

            <TextView
                android:id="@+id/music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:textSize="18sp"
                android:layout_marginLeft="12sp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/text">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Switch
                android:id="@+id/switch_enabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                tools:ignore="UseSwitchCompatOrMaterialXml"
                android:text="Включён"
                android:textSize="20sp"
                android:textColor="@color/text"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold">
            </Switch>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Сохранить"
            android:textSize="18sp"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:textColor="@color/text"
            app:backgroundTint="@color/button">
        </com.google.android.material.button.MaterialButton>

    </LinearLayout>


</ScrollView>


